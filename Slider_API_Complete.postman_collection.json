      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract slider ID from create response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data._id) {",
          "    pm.collectionVariables.set('slider_id', pm.response.json().data._id);",
